#include <bits/stdc++.h>
using namespace std;
#define ll long long int
#define pb push_back
#define translow transform(s.begin(),s.end(),s.begin(),::tolower);
#define transup transform(s.begin(),s.end(),s.begin(),::toupper);
#define endl "\n"
#define fast ios_base::sync_with_stdio(false);cin.tie(NULL);cout.tie(NULL);
ll mod=1e9+7;
vector<pair<ll,ll>>adj[100000];
bool visited[100000];
ll n;

        ll prims(ll source)
            {
                ll ans=0;
                priority_queue<pair<ll,ll> ,vector<pair<ll,ll>> ,greater<pair<ll,ll> > > q;  //min heap
                q.push({0,source});
                memset(visited,false,sizeof(visited));
                while(!q.empty())
                {

                    ll cn=q.top().second;
                    ll weight=q.top().first;
                    q.pop();

                    if(visited[cn]==true)
                        continue;
                    ans+=weight;
                     // cout<<weight<<" "<<cn<<endl;
                    visited[cn]=true;
                    for(auto it:adj[cn])
                    {
                        ll y=it.first;
                        if(visited[y]==false)
                            q.push({it.second,y});

                    }

                }

                return ans;

            }
 
 
int main() {
				        fast
                #ifndef ONLINE_JUDGE
                freopen("input.txt","r",stdin);
                freopen("output.txt","w",stdout);
                #endif

                 ll m;
               cin>>n>>m;
              
               for(ll i=0;i<m;i++)
               {
                ll a,b,c;
                cin>>a>>b>>c;
                adj[a].pb({b,c});
                adj[b].pb({a,c});
               }
                
                ll ans=prims(1);
                cout<<ans<<endl;

                return 0;
            }
