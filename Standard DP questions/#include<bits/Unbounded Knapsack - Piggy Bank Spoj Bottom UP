#include<bits/stdc++.h>
using namespace std;
#define ll long long int
#define ff first
#define ss second
#define pb push_back
#define endl "\n"
#define inf 2000000000
#define fast ios_base::sync_with_stdio(false);cin.tie(NULL);cout.tie(NULL);
ll mod=1e9+7;			

ll n;
ll val[502];
ll weight[502];
ll dp[10002];

           

int main() {
			fast
		  #ifndef ONLINE_JUDGE
			freopen("input.txt","r",stdin);
			freopen("output.txt","w",stdout);
			#endif

			ll t;
			cin>>t;
			while(t--)
			{
            ll w,m;
            cin>>m>>w;
            w-=m;
            cin>>n;
            
            for(ll i=1;i<=n;i++)
            {
              cin>>val[i]>>weight[i];
            }
            for(ll i=1;i<=w;i++)
            dp[i]=inf;
            
            
            for(ll i=1;i<=w;i++)
            {
              for(ll j=1;j<=n;j++)
              {
                if(i>=weight[j])
                {
                  dp[i]=min(dp[i],val[j]+dp[i-weight[j]]);
                }
              }
            }
            
            ll x=dp[w];

            if(x==inf)
            {
              cout<<"This is impossible."<<endl;
            }
            else
            {
              cout<<"The minimum amount of money in the piggy-bank is "<<x<<"."<<endl;
            }
            

			}
			return 0;
		 }	
